{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": ["./coverage", "./dist", "__tests__", "jest.config.ts"]
}
